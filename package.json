{
  "name": "fullstack-react-nodejs-supabase",
  "version": "1.0.0",
  "private": true,
  "description": "Fullstack monorepo with React frontend and Node.js Express backend using Supabase",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=@app/backend",
    "build:backend": "npm run build --workspace=@app/backend",
    "start:backend": "npm run start --workspace=@app/backend",
    "dev:frontend": "npm run dev --workspace=@app/frontend",
    "build:frontend": "npm run build --workspace=@app/frontend",
    "start:frontend": "npm run start --workspace=@app/frontend",
    "typecheck:frontend": "npm run typecheck --workspace=@app/frontend",
    "typecheck:backend": "npm run typecheck --workspace=@app/backend",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "lint": "eslint \"packages/backend/src\" \"packages/frontend/app\" --ext .ts,.tsx,.js,.cjs",
    "lint:fix": "eslint \"packages/backend/src\" \"packages/frontend/app\" --ext .ts,.tsx,.js,.cjs --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,json}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js,json}\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  }
}
